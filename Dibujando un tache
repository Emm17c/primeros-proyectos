#include <stdio.h>

int main (){
    int i,j,n;
    scanf("%i",&n);
    for (i=1;i<=n;i++){
        for(j=1;j<=n;j++){
           if((j-i)==0){
            printf("@");
           }
           else if((j+i) == (n+1)){
                printf("@");
            }else{
            printf(" ");
            }
        }
    printf("\n");
    }

return 0;
}
